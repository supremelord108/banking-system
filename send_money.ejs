    <style>
        .nav-link:hover {
            text-decoration: underline;
            color:#598392;
        }
        .formin {
            border-radius: 20px;
            width: 380px;
            height: 50px;
            padding: 5px 5px 5px 15px;
        }

        .tran_btn {
            margin-bottom: 10px;
            box-shadow: 2px 2px 10px #01161E;
            border-radius: 30px;

            font-weight: bold;
            color: white;
            padding: 10px 20px 10px 20px;
            background-color:#01161E; 
            color:#EFF6E0;
        }
        .tran_btn:hover{
            background-color:#AEC3B0;
            color:#01161E;
        }


        td {
            padding-top: 10px;
            padding-bottom: 10px;
        }

    </style>

    <center>
        <%  if(success !=""){ %>
            <div class="alert alert-success">
                <strong>Success!</strong> <%= success %>
            </div>
              <script>
                setTimeout(function () {
                   // after 2 seconds
                   window.location = "/transaction";
                }, 2000)
              </script>
            <% } %>

            <%  if(failed !=""){ %>
                
                <div class="alert alert-warning">
                    <strong>Failed!</strong> <%= failed %>
                </div>
                <script>
                    setTimeout(function () {
                       // after 2 seconds
                       window.location = "/send_money";
                    }, 2000)
                  </script>
                <% } %>
          

        <div class="container" style="margin-top:2%;">
            <div
                style="width:50%; background-color:rgba(0,0,0,.5); padding:5px 5px 5px 5px; border-radius:30px; box-shadow: 2px 2px 10px gray;">
                <h1 style=" color:white;">Transfer Money</h1>
            </div>
            <br><br>
            <div class="" style=" backdrop-filter: blur(5px);  border-radius:5px;  ">
                <form action="send_money" method="post">
                   
                    <table>
                        <tr>
                            <td><input type="text" class="formin form-control" name="sender_no" id=""
                                    placeholder="Sender's Account Number"
                                    value="<%=   money[0].accno %>" required></td>
                        <tr>
                        <tr>
                            <td><input type="number" class="formin form-control" name="amount" id=""
                                    placeholder="Amount to Transfer" required></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="formin form-control" name="receiver_no" id=""
                                    placeholder="Reciever's Account Number" required></td>
                        </tr>
                    </table>
                    <br><input class="tran_btn" type="submit" value="Transfer" ><br><br>
                </form>
            </div>
        </div>


        
            

    </center>




    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>
</body>

</html>